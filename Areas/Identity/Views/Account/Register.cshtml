@{
	//Layout = null;
	ViewData["Title"] = "Đăng ký";
}

@model RegisterViewModel

<div class="container d-block justify-content-center w-50 mb-4 pt-3">
	<h1 class="text-center text-dark mb-4 text-uppercase"><b>Đăng ký</b></h1>

	<form asp-action="Register">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="form-floating mb-3">
			<input asp-for="Email" type="email" class="form-control" placeholder="Nhập email..." aria-describedby="emailHelp">
			<label asp-for="Email" class="fw-bold"></label>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu...">
			<label asp-for="Password" class="fw-bold"></label>
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu...">
			<label asp-for="ConfirmPassword" class="fw-bold"></label>
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="UserName" type="text" class="form-control" placeholder="Nhập tên tài khoản...">
			<label asp-for="UserName" class="fw-bold"></label>
			<span asp-validation-for="UserName" class="text-danger"></span>
		</div>
		
		<button type="submit" class="btn btn-dark fw-bold w-100 mt-1 mb-3">Đăng ký</button>

		<div class="text-center">Đã có tài khoản? <a asp-controller="Account" asp-action="Login" asp-area="Identity">Đăng nhập</a></div>
	</form>
</div>