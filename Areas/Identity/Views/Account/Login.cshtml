@{
	//Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Đăng nhập";
}

@model LoginViewModel

<div class="container d-block justify-content-center w-50 mb-4 pt-3">
	<h1 class="text-center text-success mb-4 text-uppercase"><b>Đăng nhập</b></h1>

	<form asp-action="Login">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="form-floating mb-3">
			<input asp-for="Email" type="email" class="form-control" placeholder="Nhập email..." aria-describedby="emailHelp">
			<label asp-for="Email" class="fw-bold"></label>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>

		<div class="form-floating mb-3">
			<input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu...">
			<label asp-for="Password" class="fw-bold">Password</label>
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>

		<div class="mb-3 form-check">
			<input asp-for="RememberMe" type="checkbox" class="form-check-input" id="exampleCheck1">
			<label class="form-check-label" asp-for="RememberMe">Ghi nhớ tài khoản</label>
		</div>

		<button type="submit" class="btn btn-success w-100 mt-1 mb-3 fw-bold">Đăng nhập</button>

		<div class="text-center">Chưa có tài khoản? <a asp-controller="Account" asp-action="Register" asp-area="Identity">Đăng ký</a></div>
	</form>
</div>