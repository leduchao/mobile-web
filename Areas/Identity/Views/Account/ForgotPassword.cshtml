@model MobileWeb.Areas.Identity.Models.Account.ForgotPasswordViewModel

@{
	ViewData["Title"] = "Quên mật khẩu";
}

<div class="container d-block justify-content-center w-50 mb-4 pt-3">
	<h2 class="text-center text-dark mb-4 text-uppercase"><b>Quên mật khẩu</b></h2>

	<form asp-action="ForgotPassword">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="form-floating mb-3">
			<input asp-for="Email" class="form-control" placeholder="Nhập email..."/>
			<label asp-for="Email" class="fw-bold"></label>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>

		<div class="form-group mt-1 mb-4">
			<input type="submit" value="Xác nhận" class="btn btn-dark fw-bold w-100" />
		</div>

		<div class="text-center">
			<p>Đã có tài khoản? <a asp-action="Login" asp-controller="Account">Đăng nhập</a></p>
			<p>Chưa có tài khoản? <a asp-action="Register" asp-controller="Account">Đăng ký</a></p>
		</div>
	</form>
</div>

