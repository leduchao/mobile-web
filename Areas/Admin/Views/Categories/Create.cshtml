@model MobileWeb.Models.DTOs.CategoryDTO

@{
	ViewData["Title"] = "Tạo mới danh mục";
}

<h2 class="text-black fw-bold fst-italic">Tạo danh mục mới</h2>
<hr />
<form asp-action="Create" class="text-black">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>

	<div class="form-group w-25">
		<label asp-for="Name" class="control-label"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-success text-uppercase d-inline fw-bold">Tạo</button>
	<span class="m-2">|</span>
	<a asp-action="Index" class="d-inline">Quay lại</a>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
