@model MobileWeb.Models.DTOs.ProductDTO

@{
	ViewData["Title"] = "Chi tiết sản phẩm";
}

<h2 class="text-black fst-italic fw-bold">Chi tiết sản phẩm</h2>
<hr />

<div>
	<dl class="row text-black">
		<dt class="col-sm-3">Tên sản phẩm:</dt>
		<dd class="col-sm-9">
			@Html.DisplayFor(model => model.Name)
		</dd>

		<dt class="col-sm-3">Mô tả:</dt>
		<dd class="col-sm-9">
			@Html.DisplayFor(model => model.Description)
		</dd>

		<dt class="col-sm-3">Hình ảnh:</dt>
		<dd class="col-sm-9">
			@Html.DisplayFor(model => model.ImgUrl)
		</dd>

		<dt class="col-sm-3">Giá:</dt>
		<dd class="col-sm-9">
			@Html.DisplayFor(model => model.Price)
		</dd>

		<dt class="col-sm-3">Số lượng trong kho:</dt>
		<dd class="col-sm-9">
			@Html.DisplayFor(model => model.Quantity)
		</dd>

		<dt class="col-sm-3">Hãng:</dt>
		<dd class="col-sm-9">
			@Html.DisplayFor(model => model.Category!.Name)
		</dd>

		<dt class="col-sm-3">Màu sắc:</dt>
		<dd class="col-sm-9">
			@Html.DisplayFor(model => model.Color)
		</dd>

		<dt class="col-sm-3">Thông số kỹ thuật:</dt>
		<div class="col-sm-9 row">
			<dt class="col-sm-3">RAM:</dt>
			<dd class="col-sm-9">@Html.DisplayFor(model => model.RAM)</dd>

			<dt class="col-sm-3">ROM:</dt>
			<dd class="col-sm-9">@Html.DisplayFor(model => model.ROM)</dd>

			<dt class="col-sm-3">Số cameara sau:</dt>
			<dd class="col-sm-9">@Html.DisplayFor(model => model.NumberOfBehindCamera)</dd>

			<dt class="col-sm-3">Model:</dt>
			<dd class="col-sm-9">@Html.DisplayFor(model => model.Model)</dd>

			<dt class="col-sm-3">Hệ diều hành</dt>
			<dd class="col-sm-9">@Html.DisplayFor(model => model.OperatingSystemVersion)</dd>
		</div>
	</dl>
</div>
<div class="mb-3">
	<a asp-action="Edit" asp-route-id="@ViewBag.ProductId">Chỉnh sửa</a>
	<span class="mx-2">|</span>
	<a asp-action="Index">Quay lại danh sách</a>
</div>
