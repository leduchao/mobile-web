@model IQueryable<MobileWeb.Models.Entities.Product>

<div class="container py-5">
	<div class="row text-center pt-3">
		<div class="col-lg-6 m-auto">
			<p class="fs-1 fw-bold">Sản phẩm nổi bật</p>
		</div>
	</div>
	<div class="row">
		@foreach (var item in Model)
		{
			<div class="col-12 col-md-4 mt-3">
				<img src="~/img/products/@item.ImgUrl" class="shadow rounded-circle img-fluid border" width="400">
				<p class="fs-5 fw-bold text-center mt-3 mb-3">@item.Name</p>
				<p class="text-center"><a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@item.Id" class="btn btn-dark">Xem sản phẩm</a></p>
			</div>
		}
	</div>
</div>