							<input type="text" class="form-control" id="inputMobileSearch" placeholder="Search ...">
							<div class="input-group-text">
								<i class="fa fa-fw fa-search"></i>
							</div>
						</div>
					</div>

					@*check accessing controller*@
					@if (@ViewContext.RouteData.Values["controller"]?.ToString() == "Shop")
					{
						@*search*@
						<a class="nav-icon d-none d-lg-inline" href="#" data-bs-toggle="modal" data-bs-target="#templatemo_search">
							<i class="fa fa-fw fa-search text-dark mr-2"></i>
						</a>
					}

					@*login*@
					@*<partial name="_LoginPartial" />*@

					@if (User.Identity!.IsAuthenticated && User.IsInRole("user")) {
						@*cart*@
						@await Html.PartialAsync("_CartPartial")

						@*{
							string userId = User.Identity.GetUserId();
						}*

						@*user profile*@
						<a asp-controller="Users" asp-action="ShowProfile" asp-route-username="@User.Identity.Name" class="nav-icon position-relative text-decoration-none">
							Hi, @User.Identity.Name
							@*<i class="fa fa-fw fa-user text-dark mr-3"></i>*@
							@*<span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark">+99</span>*@
						</a>

						@*logout*@
						<a asp-controller="Users" asp-action="Logout" type="button" class="btn btn-outline-danger ms-2 fw-bold">Đăng xuất</a>
					}
					else {
						
						@*login, signup*@
						<a asp-controller="Users" asp-action="Login" type="button" class="btn btn-outline-success fw-bold">Đăng nhập</a>
						<a asp-controller="Users" asp-action="Signup" type="button" class="btn btn-outline-primary ms-2 fw-bold">Đăng ký</a>
					}
				</div>
			</div>

		</div>
