
<!DOCTYPE html>
<html lang="vi">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>

	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	@* <link rel="stylesheet" href="~/MobileWeb.styles.css" asp-append-version="true" /> *@

	<link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">

	<link rel="stylesheet" href="~/css/custom.css">

	@* bootstrap 5.3 *@
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

	@* bootstrap icon *@
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

	@* font *@
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">

	<!-- Load map styles -->
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A==" crossorigin="" />
</head>
<body>
	<!-- Header -->
	<nav class="fixed-top navbar navbar-expand-lg navbar-light shadow-sm bg-white">
		<div class="container d-flex justify-content-between align-items-center">
			<a class="navbar-brand text-dark fw-bold fs-4 pe-4 border-end border-3 border-dark py-0" asp-controller="Home" asp-action="Index">
				MobiShop
			</a>

			<button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#templatemo_main_nav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse d-lg-flex justify-content-between" id="templatemo_main_nav">
				<ul class="nav navbar-nav d-flex justify-content-between">
					<li class="nav-item">
						<a class="nav-link fw-bold tab-hover" asp-controller="Home" asp-action="Index">Trang chủ</a>
					</li>
					@* <li class="nav-item">
						<a class="nav-link fw-bold" asp-controller="About" asp-action="Index">Giới thiệu</a>
					</li> *@
					<li class="nav-item">
						<a class="nav-link fw-bold" asp-controller="Shop" asp-action="Index">Cửa hàng</a>
					</li>
				</ul>

				<div class="navbar align-self-center d-flex">
					<partial name="_LoginPartial" />
				</div>
			</div>
		</div>
	</nav>

	@*main content*@
	<div class="" style="margin-top: 4.5rem; padding-bottom: 16.5rem">
		<main role="main" class="">
			@RenderBody()
		</main>
	</div>

	<!-- Start Footer -->
	<footer class="bg-dark footer position-absolute bottom-0 w-100">
		<div class="container">
			<div class="row">
				<div class="col-md-9 pt-5">
					<h2 class="h2 text-white logo">MobiShop</h2>
					<hr style="color: white"/>
					<ul class="list-unstyled text-light footer-link-list">
						<li>
							<i class="bi bi-geo-alt me-2"></i>
							Tp. Hồ Chí Minh, Việt Nam
						</li>
						<li>
							<i class="bi bi-telephone me-2"></i>
							<a class="text-decoration-none" href="tel:010-020-0340">010-020-0340</a>
						</li>
						<li>
							<i class="bi bi-envelope-at me-2"></i>
							<a class="text-decoration-none" href="mailto:info@company.com">info@mobishop.com</a>
						</li>
					</ul>
				</div>

				<div class="col-md-3 pt-5 d-flex justify-content-end">
					<ul class="list-inline text-left footer-icons">
						<li class="list-inline-item text-center">
							<a class="text-light text-decoration-none" target="_blank" href="http://facebook.com/">
								<i class="bi bi-facebook fs-3"></i>
							</a>
						</li>
						<li class="list-inline-item text-center">
							<a class="text-light text-decoration-none" target="_blank" href="https://www.instagram.com/">
								<i class="bi bi-instagram fs-3"></i>
							</a>
						</li>
						<li class="list-inline-item text-center">
							<a class="text-light text-decoration-none" target="_blank" href="https://twitter.com/">
								<i class="bi bi-twitter-x fs-3"></i>
							</a>
						</li>
						<li class="list-inline-item text-center">
							<a class="text-light text-decoration-none" target="_blank" href="https://www.linkedin.com/">
								<i class="bi bi-linkedin fs-3"></i>
							</a>
						</li>
					</ul>
				</div>

			</div>
		</div>

		<div class="w-100 bg-black text-center text-white py-3">
			Copyright &copy; 2023 MobiShop
		</div>

	</footer>
	<!-- End Footer -->
	<!-- Start Script -->
	<script src="~/js/site.js" asp-append-version="true"></script>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/jquery-1.11.0.min.js"></script>
	<script src="~/js/jquery-migrate-1.2.1.min.js"></script>

	@* <script src="~/js/templatemo.js"></script> *@
	<script src="~/js/custom.js"></script>

	@*slick slider for product detail*@
	<script src="~/js/slick.min.js"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
