@using Microsoft.AspNetCore.Identity
@using MobileWeb.Models.Entities

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		if (User.IsInRole("Admin"))
		{
			<li class="nav-item">
				<a class="nav-link fw-bold" asp-controller="Home" asp-action="Index" asp-area="Admin">
					@UserManager.GetUserName(User)
				</a>
			</li>
		}
		else 
		{
			<li class="nav-item">
				<a asp-controller="Users" asp-action="ShowProfile" asp-route-username="@UserManager.GetUserId(User)" class="nav-link fw-bold">
					@UserManager.GetUserName(User)
				</a>
			</li>
		}

		<li class="nav-item">
			<a asp-controller="Account" asp-action="Logout" asp-area="Identity" type="button" class="nav-link fw-bold">Đăng xuất</a>
		</li>

	}
	else
	{
		<li class="nav-item">
			<a asp-controller="Account" asp-action="Login" asp-area="Identity" type="button" class="nav-link fw-bold">Đăng nhập</a>
		</li>

		<li class="nav-item">
			<a asp-controller="Account" asp-action="Register" asp-area="Identity" type="button" class="nav-link ms-2 fw-bold">Đăng ký</a>
		</li>
	}
</ul>
