@using Microsoft.AspNetCore.Identity
@using MobileWeb.Models.Entities

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		if (User.IsInRole("Admin"))
		{
			<li class="nav-item">
				<a class="nav-link fw-bold" asp-controller="Home" asp-action="Index" asp-area="Admin">
					Admin
				</a>
			</li>
		}
		<li class="nav-item">
			<a class="nav-icon position-relative text-decoration-none" asp-controller="Shop" asp-action="ShowCart" asp-route-id="">
				<i class="fa fa-fw fa-cart-arrow-down text-dark mr-1"></i>
				<span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark">7</span>
			</a>
		</li>

		<li class="nav-item">
			<a asp-controller="Users" asp-action="ShowProfile" asp-route-username="@UserManager.GetUserId(User)" class="nav-icon position-relative text-decoration-none">
				Hi, @UserManager.GetUserName(User)!
				<i class="fa fa-fw fa-user text-dark mr-3"></i>
				<span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark">+99</span>
			</a>
		</li>

		<li class="nav-item">
			<form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button id="logout" type="submit" class="nav-link btn btn-link text-dark">Đăng xuất</button>
			</form>
		</li>

	}
	else
	{
		<li class="nav-item">
			<a asp-controller="Users" asp-action="Login" type="button" class="nav-link fw-bold">Đăng nhập</a>
		</li>

		<li class="nav-item">
			<a asp-controller="Users" asp-action="Signup" type="button" class="nav-link ms-2 fw-bold">Đăng ký</a>
		</li>
	}
</ul>
