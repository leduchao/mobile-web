@{
	ViewData["Title"] = "Hồ Sơ";
}

@model MobileWeb.Models.User;

<div class="container-xl px-4 mt-4">
	<!-- Account page navigation-->
	@*<nav class="nav nav-borders">
	<a class="nav-link active ms-0" href="https://www.bootdey.com/snippets/view/bs5-edit-profile-account-details" target="__blank">Profile</a>
	<a class="nav-link" href="https://www.bootdey.com/snippets/view/bs5-profile-billing-page" target="__blank">Billing</a>
	<a class="nav-link" href="https://www.bootdey.com/snippets/view/bs5-profile-security-page" target="__blank">Security</a>
	<a class="nav-link" href="https://www.bootdey.com/snippets/view/bs5-edit-notifications-page" target="__blank">Notifications</a>
	</nav>*@
	@*<hr class="mt-0 mb-4">*@
	<div class="row">
		<div class="col-xl-4">
			<!-- Profile picture card-->
			<div class="card mb-4 mb-xl-0">
				<div class="card-header fw-bold">Ảnh đại diện</div>
				<div class="card-body text-center">
					<!-- Profile picture image-->
					<img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
					<!-- Profile picture help block-->
					<div class="small font-italic text-muted mb-4 fw-bold">Đuôi JPG hoặc PNG và không lớn hơn 5 MB</div>
					<!-- Profile picture upload button-->
					<button class="btn btn-primary" type="button">Chọn ảnh đại diện mới</button>
				</div>
			</div>
		</div>
		<div class="col-xl-8">
			<!-- Account details card-->
			<div class="card mb-4">
				<div class="card-header fw-bold">Thông tin chi tiết</div>
				<div class="card-body">
					<form asp-controller="Users" asp-action="EditProfile" method="post">
						<!-- Form Group (username)-->
						<div class="mb-3">
							<label asp-for="Name" class="small mb-1 fw-bold">Tên định danh (tên này sẽ hiển thị cho người khác thấy)</label>
							<input asp-for="Name" class="form-control" id="inputUsername" type="text"  name="username" placeholder="Nhập tên định danh..." value="@Model.Name">
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>

						<!-- Form Row-->
						<div class="row gx-3 mb-3">
							<!-- Form Group (first name)-->
							<div class="col-md-6">
								<label asp-for="FirstName" class="small mb-1 fw-bold">Tên</label>
								<input asp-for="FirstName" class="form-control" id="inputFirstName" type="text" placeholder="Nhập tên..." value="@Model.FirstName">
							</div>

							<!-- Form Group (last name)-->
							<div class="col-md-6">
								<label asp-for="LastName" class="small mb-1 fw-bold">Họ và tên đệm</label>
								<input asp-for="LastName" class="form-control" id="inputLastName" type="text" placeholder="Nhập họ và tên đệm..." value="@Model.LastName">
							</div>
						</div>

						<!-- Form Group (email address)-->
						<div class="mb-3">
							<label asp-for="Email" class="small mb-1 fw-bold">Email</label>
							<input asp-for="Email" class="form-control" id="inputEmailAddress" type="email" placeholder="Nhập địa chỉ email..." value="@Model.Email">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>

						<!-- Form Group (address)-->
						<div class="mb-3">
							<label asp-for="Address" class="small mb-1 fw-bold">Địa chỉ</label>
							<input asp-for="Address" class="form-control" id="inputAddress" type="text" placeholder="Nhập địa chỉ của bạn..." value="@Model.Address">
						</div>

						<!-- Form Row-->
						<div class="row gx-3 mb-3">
							<!-- Form Group (phone number)-->
							<div class="col-md-6">
								<label asp-for="Phone" class="small mb-1 fw-bold">Số điện thoại</label>
								<input asp-for="Phone" class="form-control" id="inputPhone" type="tel" placeholder="Nhập số điện thoại..." value="@Model.Phone">
							</div>
							<!-- Form Group (birthday)-->
							<div class="col-md-6">
								<label asp-for="Birthday" class="small mb-1 fw-bold">Năm sinh</label>
								<input asp-for="Birthday" class="form-control" id="inputBirthday" type="text" name="birthday" placeholder="NHập năm sinh" value="@Model.Birthday">
							</div>
						</div>

						<!-- Save changes button-->
						<input type="submit" class="btn btn-primary" value="Lưu thay đổi"/>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}