@model MobileWeb.Models.User

@{
	ViewData["Title"] = "Xóa khách hàng";
	Layout = "_Admin";
}

<h1>@ViewData["Title"]</h1>

<h3>Bạn chắc chắn muốn xóa khách hàng này?</h3>
<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			Tên khách hàng
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Name)
		</dd>
		<dt class="col-sm-2">
			Email
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>
		<dt class="col-sm-2">
			Mật khẩu
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Password)
		</dd>
		<dt class="col-sm-2">
			Địa chỉ
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Address)
		</dd>
		@*<dt class = "col-sm-2">
		@Html.DisplayNameFor(model => model.AvatarUrl)
		</dt>
		<dd class = "col-sm-10">
		@Html.DisplayFor(model => model.AvatarUrl)
		</dd>*@
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Role)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Role)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Xóa" class="btn btn-danger" /> |
		<a asp-action="Index">Quay lại</a>
	</form>
</div>
