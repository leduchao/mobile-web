@model MobileWeb.Models.User

@{
	ViewData["Title"] = "Thông tin khách hàng";
	Layout = "_Admin";
}

<h1>@ViewData["Title"]</h1>

<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			Tên khách hàng
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Name)
		</dd>

		<dt class="col-sm-2">
			Email
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>

		<dt class="col-sm-2">
			Mật khẩu
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Password)
		</dd>

		<dt class="col-sm-2">
			Địa chỉ
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Address)
		</dd>
		@*<dt class="col-sm-2">
