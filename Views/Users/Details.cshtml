		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.AvatarUrl)
		</dd>*@

		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Role)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Role)
		</dd>
	</dl>
</div>
